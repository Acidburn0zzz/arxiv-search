{
  "settings": {
    "analysis": {
      "analyzer": {
        "simple": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": [
            "lowercase"
          ]
        },
        "tex_analyzer": {
          "type": "custom",
          "tokenizer": "tex_tokenizer"
        }
      },
      "tokenizer": {
        "tex_tokenizer": {
          "type": "pattern",
          "pattern": "\\$([^\\$]+)\\$",
          "group": 1
        }
      },
      "normalizer": {
        "simple": {
          "filter": [
            "lowercase"
          ]
        },
        "folding": {
          "filter": [
            "icu_folding",
            "lowercase"
          ]
        }
      }
    }
